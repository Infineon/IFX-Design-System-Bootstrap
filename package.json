{
  "name": "@infineon/design-system-bootstrap",
  "version": "1.0.0",
  "private": true,
  "description": "Infineon design system bootstrap components",
  "homepage": "https://github.com/Infineon/IFX-Design-System-Bootstrap#readme",
  "bugs": {
    "url": "https://github.com/Infineon/IFX-Design-System-Bootstrap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Infineon/IFX-Design-System-Bootstrap.git"
  },
  "files": [
    "dist"
  ],
  "license": "UNLICENSED",
  "author": "Jonas Ulrich",
  "scripts": {
    "copy-fonts": "cp -a node_modules/@infineon/design-system-tokens/dist/fonts .storybook",
    "build-docs": "node tools/createMarkdownStories.js",
    "build-storybook": "build-storybook",
    "build": "yarn copy-fonts && yarn build-tokens && yarn build-docs && yarn build-storybook",
    "watch-docs": "chokidar \"*.md\" -c \"yarn build-docs\" --initial",
    "watch-storybook": "start-storybook -p 6006",
    "start": "yarn copy-fonts && concurrently -r yarn:watch-*",
    "bundle-css": "sass --load-path=node_modules --style=compressed --no-source-map .storybook/index.scss dist/index.css",
    "bundle-js": "esbuild src/index.js --outfile=dist/index.js --bundle --platform=browser --minify",
    "bundle-fonts": "cp -a node_modules/@infineon/design-system-tokens/dist/fonts dist",
    "bundle-assets": "cp -a public/. dist",
    "bundle": "concurrently -r yarn:bundle-*",
    "package-source": "cp -a src dist-sources",
    "package-assets": "cp -a public dist-sources",
    "package": "concurrently -r yarn:package-*"
  },
  "dependencies": {
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@infineon/design-system-tokens": "ssh://git@github.com:Infineon/IFX-Design-System-Tokens.git",
    "bootstrap": "^5.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.8",
    "@storybook/builder-webpack5": "^6.4.8",
    "@storybook/manager-webpack5": "^6.4.8",
    "@storybook/react": "^6.4.8",
    "@whitespace/storybook-addon-html": "git+https://github.com/lmestel/storybook-addon-html.git",
    "babel-loader": "^8.2.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "css-loader": "^6.5.1",
    "esbuild": "^0.14.38",
    "holderjs": "^2.9.9",
    "sass": "^1.44.0",
    "sass-loader": "^12.3.0",
    "storybook-design-token": "^1.4.0",
    "style-dictionary": "^3.0.3",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0"
  }
}
